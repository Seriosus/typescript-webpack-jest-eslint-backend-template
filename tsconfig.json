{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./tmp/tsconfig.tsbuildinfo",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "types": [
      "jest"
    ],
    "paths": {
      "@app/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}